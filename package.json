{
  "name": "@conveniencepro/ctp-mcp-server",
  "version": "1.0.1",
  "description": "MCP server for AI-powered CTP tool generation - describe a tool, get production-ready code",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ctp-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/templates dist/ && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "node examples/test-tool-creation.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ctp",
    "tool-generation",
    "ai",
    "developer-tools",
    "claude",
    "code-generation",
    "scaffolding"
  ],
  "author": "ConveniencePro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/titan-alpha/ctp-mcp-server.git"
  },
  "homepage": "https://github.com/titan-alpha/ctp-mcp-server",
  "bugs": {
    "url": "https://github.com/titan-alpha/ctp-mcp-server/issues"
  },
  "dependencies": {
    "@conveniencepro/ctp-core": "^1.0.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
